---
import {
  Menu,
  X,
  Link,
  MessageCircle,
  Mail,
  Linkedin,
  Github,
  ArrowRight,
  User,
  Instagram,
} from "lucide-react";
import React, { useState } from "react";
import Layout from "../layouts/Layout.astro";
import Experience from '../components/Experience.astro';
import Navigation from "../components/Navigation.astro";

---

<Layout>
  <div class="min-h-screen bg-gray-100 font-mono">
    <div class="max-w-3xl mx-auto px-4 py-8">
      {/* Avatar Section */}
      <div class="flex justify-center mb-8">
        <div
          class="w-32 h-32 rounded-full bg-gray-200 flex items-center justify-center relative group overflow-hidden">
          {/* Default Icon */}
          <div
            class="absolute inset-0 flex items-center justify-center group-hover:opacity-0 transition-opacity duration-300">
            <User size={48} color={"black"} />
          </div>

          {/* Profile Picture */}
          <img
            src="/profile-pixel.png"
            alt="Profile"
            class="absolute inset-0 w-full h-full object-cover rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          />
        </div>
      </div>

      {/* Navigation */}
      <Navigation />


      {/* Header Section */}
      <header class="mb-16 text-center">
        <h1 class="text-2xl font-bold mb-4">Junaid Hossein</h1>
        <div class="text-sm text-gray-600 space-y-2">
          <p>technical_product_manager.exe</p>
          <p>Düsseldorf, Germany</p>
        </div>
      </header>

      {/* About Section */}
      <section id="about" class="mb-16">
        <h2 class="text-lg mb-4">
          $ cat <span class="text-gray-800 font-bold">about.txt</span>
        </h2>
        <div class="bg-white p-6 border border-gray-200">
          <p class="text-sm leading-relaxed text-gray-600">
            Technical PM with strong system design experience in both enterprise and startup
            domains. I design applications to be Reliable, Scalable, and Maintainable. Experienced
            in refining product requirements and communicating them through database modelling, API
            Specifications, C4 diagrams, and other system architecture specifications.
          </p>
        </div>
      </section>

      {/* Experience Section */}
      <section id="experience" class="mb-16">
        <h2 class="text-lg mb-4">
          $ ls -l <span class="text-gray-800 font-bold">/experience</span>
        </h2>
        <Experience />
      </section>

      {/* Projects Section */}
      <section id="projects" class="mb-16">
        <h2 class="text-lg mb-4">
          $ ls -l <span class="text-gray-800 font-bold">/projects</span>
        </h2>
        <div class="space-y-4">
          <div class="bg-white p-6 border border-gray-200">
            <h3 class="font-bold mb-2">NFT Staking App @ Pixelmon</h3>
            <p class="text-sm text-gray-600 mb-2">
              PM for #1 traded NFT on OpenSea. Worked with blockchain developers and game designers.
            </p>
            <div class="text-xs text-gray-500">tech_stack: [Ethereum, Smart Contracts]</div>
          </div>

          <div class="bg-white p-6 border border-gray-200">
            <h3 class="font-bold mb-2">FinTech Advisory @ SwissLife Select</h3>
            <p class="text-sm text-gray-600 mb-2">
              Led implementation of eIDAS-compliant eSignature for 2,000 IFAs.
            </p>
            <div class="text-xs text-gray-500">tech_stack: [C#.NET, AWS, Microservices]</div>
          </div>
        </div>
      </section>

      {/* Skills Section */}
      <section id="skills" class="mb-16">
        <h2 class="text-lg mb-4">
          $ cat <span class="text-gray-800 font-bold">skills.json</span>
        </h2>
        <div class="bg-white p-6 border border-gray-200">
          <div class="space-y-4">
            <div>
              <h3 class="font-bold mb-2">Technology</h3>
              <p class="text-sm text-gray-600">
                System Design, Backend Architecture, Microservices, Python, C#.NET, Angular, React,
                RabbitMQ, MongoDB
              </p>
            </div>
            <div>
              <h3 class="font-bold mb-2">Tools</h3>
              <p class="text-sm text-gray-600">
                Figma, Sketch, JIRA, GitHub, LucidChart, C4 Diagramming, PowerBI
              </p>
            </div>
            <div>
              <h3 class="font-bold mb-2">Product Management</h3>
              <p class="text-sm text-gray-600">
                Backlog Management, User Journey Mapping, Story Writing, Business Modelling,
                Agile/Scrum
              </p>
            </div>
          </div>
        </div>
      </section>

      {/* Contact Section */}
      <section id="contact" class="mb-16">
        <h2 class="text-lg mb-4">
          $ contact <span class="text-gray-800 font-bold">--help</span>
        </h2>
        <div class="bg-white p-6 border border-gray-200">
          <div class="flex flex-col space-y-2">
            <div class="flex-col justify-center space-y-2">
              <a
                href="https://github.com/Junaid101"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-black flex items-center space-x-2">
                <Github size={20} />
                <span class="text-sm">/github</span>
              </a>
              <a
                href="https://linkedin.com/in/junaidhgazi"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-black flex items-center space-x-2">
                <Linkedin size={20} />
                <span class="text-sm">/linkedin</span>
              </a>
              <a
                href="mailto:junaid.h.gazi@gmail.com"
                class="text-gray-500 hover:text-black flex items-center space-x-2">
                <Mail size={20} />
                <span class="text-sm">/email</span>
              </a>
              <a
                href="https://instagram.com/junaid_1010"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-500 hover:text-black flex items-center space-x-2">
                <Instagram size={20} />
                <span class="text-sm">/instagram</span>
              </a>
            </div>
            <div class="text-xs text-gray-500 mt-4">echo "Let's connect and collaborate!"</div>
          </div>
        </div>
      </section>

      {/* Footer */}
      <footer class="text-center text-sm text-gray-500">
        <p>© {new Date().getFullYear()} // all rights reserved</p>
      </footer>
    </div>
  </div>
</Layout>
