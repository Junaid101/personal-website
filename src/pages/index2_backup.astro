---
import {
  Menu,
  X,
  Link,
  MessageCircle,
  Mail,
  Linkedin,
  Github,
  ArrowRight,
  User,
  Instagram,
} from 'lucide-react'; // Use lucide-astro for Astro compatibility
import Layout from '../layouts/Layout.astro';
import Experience from '../components/Experience.astro';
import Navigation from '../components/Navigation.astro';

// Note: Removed React and useState as they weren't used in the original code
---

<Layout>
  <div class="min-h-screen bg-black text-green-400 font-mono relative overflow-hidden">
    <!-- Scanline background effect -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(0,255,0,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(0,255,0,0.05)_1px,transparent_1px)] bg-[size:4px_4px] opacity-50 pointer-events-none"></div>

    <div class="max-w-3xl mx-auto px-4 py-8 relative z-10">
      <!-- Avatar Section -->
      <div class="flex justify-center mb-8">
        <div class="w-32 h-32 rounded-sm border-2 border-green-400 flex items-center justify-center relative group overflow-hidden shadow-[0_0_10px] shadow-green-400">
          <!-- Default Icon -->
          <div class="absolute inset-0 flex items-center justify-center group-hover:opacity-0 transition-opacity duration-300">
            <User size={48} color="rgb(34,197,94)" />
          </div>

          <!-- Profile Picture -->
          <img
            src="/profile-pixel.png"
            alt="Profile"
            class="absolute inset-0 w-full h-full object-cover rounded-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          />
        </div>
      </div>

      <!-- Navigation -->
      <Navigation />

      <!-- Header Section -->
      <header class="mb-16 text-center">
        <h1 class="text-2xl font-bold mb-4 animate-glitch" style="text-shadow: 0 0 5px rgb(34,197,94);">
          Junaid Hossein
        </h1>
        <div class="text-sm text-cyan-400 space-y-2">
          <p>technical_product_manager.exe</p>
          <p>engineering_manager.exe</p>
          <p>Düsseldorf, Germany</p>
        </div>
      </header>

      <!-- About Section -->
      <section id="about" class="mb-16">
        <h2 class="text-lg mb-4">
          $ cat <span class="text-white font-bold">about.txt</span>
        </h2>
        <div class="bg-gray-900 p-6 border-2 border-green-400 rounded-sm shadow-[0_0_8px] shadow-green-400">
          <p class="text-sm leading-relaxed text-green-400">
            Technical PM with strong system design experience in both enterprise and startup
            domains. I design applications to be Reliable, Scalable, and Maintainable. Experienced
            in refining product requirements and communicating them through database modelling, API
            Specifications, C4 diagrams, and other system architecture specifications.
          </p>
        </div>
      </section>

      <!-- Experience Section -->
      <section id="experience" class="mb-16">
        <h2 class="text-lg mb-4">
          $ ls -l <span class="text-white font-bold">/experience</span>
        </h2>
        <Experience />
      </section>

      <!-- Projects Section -->
      <section id="projects" class="mb-16">
        <h2 class="text-lg mb-4">
          $ ls -l <span class="text-white font-bold">/projects</span>
        </h2>
        <div class="space-y-4">
          <div class="bg-gray-900 p-6 border-2 border-green-400 rounded-sm shadow-[0_0_8px] shadow-green-400">
            <h3 class="font-bold mb-2 text-green-400">NFT Staking App @ Pixelmon</h3>
            <p class="text-sm text-green-400 mb-2">
              PM for #1 traded NFT on OpenSea. Worked with blockchain developers and game designers.
            </p>
            <div class="text-xs text-cyan-400">tech_stack: [Ethereum, Smart Contracts]</div>
          </div>

          <div class="bg-gray-900 p-6 border-2 border-green-400 rounded-sm shadow-[0_0_8px] shadow-green-400">
            <h3 class="font-bold mb-2 text-green-400">FinTech Advisory @ SwissLife Select</h3>
            <p class="text-sm text-green-400 mb-2">
              Led implementation of eIDAS-compliant eSignature for 2,000 IFAs.
            </p>
            <div class="text-xs text-cyan-400">tech_stack: [C#.NET, AWS, Microservices]</div>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section id="skills" class="mb-16">
        <h2 class="text-lg mb-4">
          $ cat <span class="text-white font-bold">skills.json</span>
        </h2>
        <div class="bg-gray-900 p-6 border-2 border-green-400 rounded-sm shadow-[0_0_8px] shadow-green-400">
          <div class="space-y-4">
            <div>
              <h3 class="font-bold mb-2 text-green-400">Technology</h3>
              <p class="text-sm text-green-400">
                System Design, Backend Architecture, Microservices, Python, C#.NET, Angular, React,
                RabbitMQ, MongoDB
              </p>
            </div>
            <div>
              <h3 class="font-bold mb-2 text-green-400">Tools</h3>
              <p class="text-sm text-green-400">
                Figma, Sketch, JIRA, GitHub, LucidChart, C4 Diagramming, PowerBI
              </p>
            </div>
            <div>
              <h3 class="font-bold mb-2 text-green-400">Product Management</h3>
              <p class="text-sm text-green-400">
                Backlog Management, User Journey Mapping, Story Writing, Business Modelling,
                Agile/Scrum
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="mb-16">
        <h2 class="text-lg mb-4">
          $ contact <span class="text-white font-bold">--help</span>
        </h2>
        <div class="bg-gray-900 p-6 border-2 border-green-400 rounded-sm shadow-[0_0_8px] shadow-green-400">
          <div class="flex flex-col space-y-2">
            <div class="flex-col justify-center space-y-2">
              <a
                href="https://github.com/Junaid101"
                target="_blank"
                rel="noopener noreferrer"
                class="text-green-400 hover:text-cyan-400 flex items-center space-x-2 hover:underline hover:decoration-cyan-400"
              >
                <Github size={20} />
                <span class="text-sm">/github</span>
              </a>
              <a
                href="https://linkedin.com/in/junaidhgazi"
                target="_blank"
                rel="noopener noreferrer"
                class="text-green-400 hover:text-cyan-400 flex items-center space-x-2 hover:underline hover:decoration-cyan-400"
              >
                <Linkedin size={20} />
                <span class="text-sm">/linkedin</span>
              </a>
              <a
                href="mailto:junaid.h.gazi@gmail.com"
                class="text-green-400 hover:text-cyan-400 flex items-center space-x-2 hover:underline hover:decoration-cyan-400"
              >
                <Mail size={20} />
                <span class="text-sm">/email</span>
              </a>
              <a
                href="https://instagram.com/junaid_1010"
                target="_blank"
                rel="noopener noreferrer"
                class="text-green-400 hover:text-cyan-400 flex items-center space-x-2 hover:underline hover:decoration-cyan-400"
              >
                <Instagram size={20} />
                <span class="text-sm">/instagram</span>
              </a>
            </div>
            <div class="text-xs text-cyan-400 mt-4">echo "Let's connect and collaborate!"</div>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <footer class="text-center text-sm text-cyan-400">
        <p>© {new Date().getFullYear()} // all rights reserved</p>
      </footer>
    </div>

    <!-- Inline CSS for glitch effect -->
    <style>
      @keyframes glitch {
        0% { transform: translate(0); }
        20% { transform: translate(-2px, 2px); }
        40% { transform: translate(-2px, -2px); }
        60% { transform: translate(2px, 2px); }
        80% { transform: translate(2px, -2px); }
        100% { transform: translate(0); }
      }
      .animate-glitch {
        animation: glitch 0.3s infinite alternate;
      }
      .animate-glitch:hover {
        animation: none;
      }
    </style>
  </div>
</Layout>